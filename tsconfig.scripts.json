{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2015",
    "lib": ["es2015"],
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src/scripts/**/*"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
